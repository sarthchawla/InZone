{
  "name": "inzone",
  "version": "0.1.0",
  "private": true,
  "description": "A Trello-like todo board application",
  "scripts": {
    "dev": "if [ -f .devcontainer/docker-compose.worktree.yml ]; then pnpm run worktree:db-start && pnpm run db:migrate:deploy && pnpm run db:generate && pnpm run db:seed; else pnpm run db:start; fi && turbo run dev",
    "dev:app": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:arch": "turbo run test:arch",
    "test:arch:watch": "turbo run test:arch:watch",
    "test:arch:report": "turbo run test:arch:report",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:start": "docker compose -f docker/docker-compose.db.yml up -d && pnpm run db:wait && pnpm run db:migrate:deploy && pnpm run db:generate && pnpm run db:seed",
    "db:stop": "docker compose -f docker/docker-compose.db.yml down",
    "db:wait": "node scripts/wait-for-db.js",
    "db:logs": "docker compose -f docker/docker-compose.db.yml logs -f",
    "db:reset": "docker compose -f docker/docker-compose.db.yml down -v && pnpm run db:start",
    "db:migrate:dev": "pnpm --filter api db:migrate:dev",
    "db:migrate:deploy": "pnpm --filter api db:migrate:deploy",
    "db:generate": "pnpm --filter api db:generate",
    "db:seed": "pnpm --filter api db:seed",
    "db:studio": "pnpm --filter api db:studio",
    "worktree": "node scripts/worktree/dist/index.js",
    "worktree:setup": "node scripts/worktree/dist/index.js setup",
    "worktree:list": "node scripts/worktree/dist/index.js list",
    "worktree:cleanup": "node scripts/worktree/dist/index.js cleanup",
    "worktree:db-start": "node scripts/worktree-db-start.js"
  },
  "devDependencies": {
    "archunit": "^2.1.63",
    "prettier": "^3.2.5",
    "turbo": "^2.3.4",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0"
  }
}
