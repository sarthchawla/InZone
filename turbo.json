{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "clean": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "test:arch": {
      "cache": false
    },
    "test:arch:watch": {
      "cache": false,
      "persistent": true
    },
    "test:arch:report": {
      "cache": false,
      "outputs": ["reports/**"]
    }
  }
}
