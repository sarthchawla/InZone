{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src",
    "clean": "rm -rf dist",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset --force",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "test:bdd": "cucumber-js --config tests/bdd/cucumber.config.cjs",
    "test:bdd:watch": "cucumber-js --config tests/bdd/cucumber.config.cjs --watch",
    "test:bdd:report": "cucumber-js --config tests/bdd/cucumber.config.cjs --format html:reports/bdd.html",
    "test:db:setup": "tsx tests/bdd/support/setup-test-db.ts",
    "test:db:reset": "tsx tests/bdd/support/reset-test-db.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@prisma/client": "^6.3.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.6.0",
    "@eslint/js": "^9.18.0",
    "@types/chai": "^5.2.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "chai": "^6.2.2",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "prisma": "^6.3.1",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0",
    "vitest": "^4.0.18",
    "vitest-mock-extended": "^3.1.0"
  }
}
